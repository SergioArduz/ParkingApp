@{
	ViewData["Title"] = "Registrar Entrada";
}


<div class="container mt-5">
	<div class="card shadow rounded-4 p-4">
		<h3 class="mb-4">🚘 Registrar Entrada</h3>


		<form asp-action="CreateEntry" method="post">
			<div class="mb-3">
				<label class="form-label">Placa del vehículo</label>
				<input type="text" name="plate" class="form-control" placeholder="Ej: 1891ZLD" required />
			</div>


			<div class="mb-3">
				<label class="form-label">Descripción (opcional)</label>
				<input type="text" name="description" class="form-control" placeholder="Color, modelo, referencia..." />
			</div>


			<div class="d-flex justify-content-end">
				<a asp-action="Index" class="btn btn-outline-secondary me-2">Cancelar</a>
				<button type="submit" class="btn btn-primary">Registrar</button>
			</div>
		</form>
	</div>
</div>