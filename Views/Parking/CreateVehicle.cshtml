@model ParkingApp.Models.Vehicle
@{
	ViewData["Title"] = "Registrar Vehículo";
}


<div class="container mt-5">
	<div class="card shadow rounded-4 p-4">
		<h3 class="mb-4">🚙 Nuevo Vehículo</h3>


		<form asp-action="CreateVehicle" method="post">
			<div class="mb-3">
				<label class="form-label">Número de Placa</label>
				<input asp-for="Plate" class="form-control" placeholder="Ej: 1891ZLD" required />
			</div>


			<div class="d-flex justify-content-end">
				<a asp-action="Index" class="btn btn-outline-secondary me-2">Cancelar</a>
				<button type="submit" class="btn btn-success">Guardar vehículo</button>
			</div>
		</form>
	</div>
</div>