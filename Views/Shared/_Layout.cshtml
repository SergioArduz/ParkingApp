<!DOCTYPE html>
<html lang="es">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - ParkingApp</title>
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="bg-light">


	<header>
		<nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm">
			<div class="container-fluid">
				<a class="navbar-brand fw-bold" asp-controller="Parking" asp-action="Index">
					<i class="bi bi-car-front-fill"></i> ParkingApp
				</a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="collapse navbar-collapse" id="navbarNav">
					<ul class="navbar-nav ms-auto">
						<li class="nav-item">
							<a class="nav-link" asp-controller="Parking" asp-action="Index">Sesiones</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" asp-controller="Parking" asp-action="Vehicles">Vehículos</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" asp-controller="Parking" asp-action="CreateEntry">Registrar Entrada</a>
						</li>
					</ul>
				</div>
			</div>
		</nav>
	</header>


	<div class="container py-4">
		<main role="main">
			@RenderBody()
		</main>
	</div>


	<footer class="text-center text-muted py-3 small">
		ParkingApp © 2025
	</footer>


	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>